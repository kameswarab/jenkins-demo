#!groovy

node('master') {
tools {
        maven 'Maven 3' 
    }    
stage('Checkout') {
        checkout scm
    }
    
    stage('Run tests') {
        try {
             steps{
                    sh 'mvn clean test -Dmaven.test.failure.ignore=true'
	     }
               
        } finally {
            echo 'tests run'
        }
    }
}
